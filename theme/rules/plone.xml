<rules xmlns="http://namespaces.plone.org/xdv"
       xmlns:css="http://namespaces.plone.org/xdv+css">

    <theme href="../templates/plone.html" />
    <!-- Drop all styles; maybe some links as well, but I might want to remove javascript as well.
         Take it one step at a time. -->
    <drop content="/html/head/style" />
    <drop content="/html/head/script" />
    <!-- Put the rest of the Plone head in the theme title.
         This way everything after the theme title stays safe. -->
    <replace content="/html/head" theme="/html/head/title" />
    <copy content='//*[@id="portal-globalnav"]' theme='//*[@id="menu"]' />
    <replace content='//*[@id="portal-column-content"]' theme='//*[@id="content"]' />
    <copy content='//*[@id="portal-column-two"]' theme='//*[@id="sidebar"]' />
    <copy content='//*[@id="portal-searchbox"]' theme='//*[@id="search"]' />

</rules>
